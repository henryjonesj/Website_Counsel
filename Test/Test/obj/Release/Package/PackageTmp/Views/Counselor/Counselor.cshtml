@model MVCEntityLogin.Models.AppointmentListModel
@{
    ViewBag.Title = "Review Appointment";
}
<style>
   .header{
	position: absolute;
	top: calc(10% - 35px);
	left: calc(55% - 255px);
	z-index: 2;
}

.header div{
	float: left;
	color: #fff;
	font-family: 'Exo', sans-serif;
	font-size: 35px;
	font-weight: 200;
}

body {
	background-image: url("http://www.counsellingsessionslondon.com/wp-content/uploads/2013/05/Counselling-630x400.jpg");
	background-size: cover;
	color: #444;
	font: 100%/30px 'Helvetica Neue', helvetica, arial, sans-serif;
	text-shadow: 0 1px 0 #fff;
}  

strong {
	font-weight: bold; 
}

em {
	font-style: italic; 
}



table {
	background: #f5f5f5;
	border-collapse: separate;
	box-shadow: inset 0 1px 0 #fff;
	font-size: 12px;
	line-height: 24px;
	margin: 30px auto;
	text-align: left;
	width: 800px;

}	

th {
	background: url(http://jackrugile.com/images/misc/noise-diagonal.png), linear-gradient(#777, #444);
	border-left: 1px solid #555;
	border-right: 1px solid #777;
	border-top: 1px solid #555;
	border-bottom: 1px solid #333;
	box-shadow: inset 0 1px 0 #999;
	color: #fff;
  font-weight: bold;
	padding: 10px 15px;
	position: relative;
	text-shadow: 0 1px 0 #000;	
}

th:after {
	background: linear-gradient(rgba(255,255,255,0), rgba(255,255,255,.08));
	content: '';
	display: block;
	height: 25%;
	left: 0;
	margin: 1px 0 0 0;
	position: absolute;
	top: 25%;
	width: 100%;
}

th:first-child {
	border-left: 1px solid #777;	
	box-shadow: inset 1px 1px 0 #999;
}

th:last-child {
	box-shadow: inset -1px 1px 0 #999;
}

td {
	border-right: 1px solid #fff;
	border-left: 1px solid #e8e8e8;
	border-top: 1px solid #fff;
	border-bottom: 1px solid #e8e8e8;
	padding: 10px 15px;
	position: relative;
	transition: all 300ms;
}

td:first-child {
	box-shadow: inset 1px 0 0 #fff;
}	

td:last-child {
	border-right: 1px solid #e8e8e8;
	box-shadow: inset -1px 0 0 #fff;
}	

tr {
	background: url(http://jackrugile.com/images/misc/noise-diagonal.png);	
}

tr:nth-child(odd) td {
	background: #f1f1f1 url(http://jackrugile.com/images/misc/noise-diagonal.png);	
}

tr:last-of-type td {
	box-shadow: inset 0 -1px 0 #fff; 
}

tr:last-of-type td:first-child {
	box-shadow: inset 1px -1px 0 #fff;
}	

tr:last-of-type td:last-child {
	box-shadow: inset -1px -1px 0 #fff;
}	

tbody:hover td {
	color: transparent;
	text-shadow: 0 0 3px #aaa;
}

tbody:hover tr:hover td {
	color: #444;
	text-shadow: 0 1px 0 #fff;

}

    label {
       width: 260px;
	height: 35px;
	background: transparent;
	color: #fff;
	font-family: 'Exo', sans-serif;
	font-size: 20px;
	font-weight: 400;
	padding: 6px;
    margin: -20px -50px; 
    position:relative;
    top:90%; 
    left:35%;
    }

input[type=text]{
	width: 250px;
	height: 25px;
	background: transparent;
	border: 1px solid rgba(255,255,255,0.6);
	border-radius: 2px;
	color: #fff;
	font-family: 'Exo', sans-serif;
	font-size: 16px;
	font-weight: 400;
	padding: 4px;
    margin: -20px -50px; 
    position:relative;
    top:45%; 
    left:43%;
  
}

input[type=submit]{
	width: 130px;
	height: 35px;
	background: #fff;
	border: 1px solid #fff;
	cursor: pointer;
	border-radius: 2px;
	color: #a18d6c;
	font-family: 'Exo', sans-serif;
	font-size: 16px;
	font-weight: 400;
	padding: 6px;
	margin-top: 20px;
    margin: -20px -50px; 
    position:relative;
    top:45%; 
    left:50%;

}

ul {
  list-style-type: none;
  background:#fff;
  padding:0;
  margin:0;
  width: 260px;
}


input[type=submit]:hover{
	opacity: 0.8;
}

input[type=submit]:active{
	opacity: 0.6;
}

input[type=submit]:focus{
	outline: none;
	border: 1px solid rgba(255,255,255,0.9);
}

.login input[type=submit]:focus{
	outline: none;
}

header{
    text-align: center;
}
.ui-helper-hidden-accessible {
    border: 0;
    clip: rect(0 0 0 0);
    height: 1px;
    margin: -1px;
    overflow: hidden;
    padding: 0;
    position: absolute;
    width: 1px;
}
</style>
@using (@Html.BeginForm("Counselor", "Counselor"))
{
    <script>
        window.onload = function () {
            @if (Session["UserName"] == null) {
                Response.Redirect("~/Home/Login");
            }
    }
    </script>

    var grid = new WebGrid(Model.AppointmentListCollction, canSort: false);
    <div class="body"></div>
    <div class="grad"></div>
        <div class="header"><div>Welcome Counselor!</div></div>
        <br /><br /><br /><br />

<br /><br /><br />

        <div>
            @if (Model.AppointmentListCollction.Count > 0)
            {     
            @grid.GetHtml(columns:
                             grid.Columns
                             (
                                 grid.Column("StudentID", "Student ID"),
                                 grid.Column("StudentName", "Student Name"),
                                 grid.Column("DateTime", "Date Time"),

                                 grid.Column(format: (item) => Html.ActionLink
                                 (linkText: "Edit",
                                  actionName: "Edit",
                                  controllerName: "Counselor",
                                  routeValues: new { studentID = item.StudentID },
                                  htmlAttributes: null
                                  )),

                                  grid.Column(format: (item) => Html.ActionLink
                                 (linkText: "Accept",
                                  actionName: "Accept",
                                  controllerName: "Counselor",
                                  routeValues: new { studentID = item.StudentID },
                                  htmlAttributes: null))),


                                 mode: WebGridPagerModes.Numeric)
            }
            else
            {
                <div class="grid">
                    <table cellspacing="0">
                        <thead>
                            <tr>
                                <th>StudentID</th>
                                <th>StudentName</th>
                                <th>DateTime</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td colspan="3" align="center">No scheduled appointments </td>
                            </tr>
                        </tbody>
                    </table>
                    <br /><br /><br /><br />
                </div>
            }

        </div>
        <div class="success" >@ViewBag.Message</div>
}
