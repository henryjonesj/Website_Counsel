}

ul {
  list-style-type: none;
  background:#fff;
  padding:0;
  margin:0;
  width: 260px;
}


input[type=submit]:hover{
	opacity: 0.8;
}

input[type=submit]:active{
	opacity: 0.6;
}

input[type=submit]:focus{
	outline: none;
	border: 1px solid rgba(255,255,255,0.9);
}

