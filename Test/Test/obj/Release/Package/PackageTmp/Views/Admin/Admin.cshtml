	outline: none;
}

header{
    text-align: center;
}
.ui-helper-hidden-accessible {
    border: 0;
    clip: rect(0 0 0 0);
    height: 1px;
    margin: -1px;
    overflow: hidden;
    padding: 0;
    position: absolute;
    width: 1px;
}
</style>
<script src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.10.0.min.js" type="text/javascript"></script>
<script src="http://ajax.aspnetcdn.com/ajax/jquery.ui/1.9.2/jquery-ui.min.js" type="text/javascript"></script>

<script type="text/javascript">
        $(function () {
            $("#txtCustomer").autocomplete({
                source: function (request, response) {
                    $.ajax({
                        url: '/Admin/SearchStudents/',
                        data: "{ 'prefix': '" + request.term + "'}",
                        dataType: "json",
                        type: "POST",
                        contentType: "application/json; charset=utf-8",
                        success: function (data) {
                            response($.map(data, function (item) {
                                return item;
                            }))
                        },
                        error: function (response) {
                            alert(response.responseText);
                        },
                        failure: function (response) {
                            alert(response.responseText);
                        },
                    });
                },
             
                select: function (e, i) {
                    $("#hfCustomer").val(i.item.val);
                },
                minLength: 1
            });
        });
</script>

@using (@Html.BeginForm("Admin", "Admin"))
{
    <script>
        window.onload = function () {
            @if (Session["UserName"] == null) {
                Response.Redirect("~/Home/Login");
            }
    }
    </script>

    var grid = new WebGrid(Model.AllAppointmentCollection, canSort: false);

    <div class="body"></div>
    <div class="grad"></div>

            <div class="header" ><div>Welcome Administrator!</div></div>

    <br /><br/><br/>

    <div class="col-md-12">
           
            <br /><br />

       @using (@Html.BeginForm("Admin", "Admin"))
       {
        <p>
            @Html.TextBox("SearchString","",new { @id = "txtCustomer",@placeholder="Student Name" })
      
            <input type="submit" value="Search" />
            <input type="button" id="btnExport" value="Export" class="btn btn-primary" style="left:50%;" />
       
                <script>
                    $(document).ready(function () {

                        $('#btnExport').click(function () {

                            window.location = '/Admin/ExportAppointments';

                        });

                    });
                </script>
</p>
       }
           
            <br /><br />
         
        

</div>

        <div>
            @if (Model.AllAppointmentCollection.Count > 0)
            {
            @grid.GetHtml(columns:
         grid.Columns
         (
           grid.Column("StudentID", "Student ID"),
           grid.Column("StudentName", "Student Name"),
           grid.Column("DateTime", "Date Time"),
           grid.Column("ConfirmationStatus", "Confirmed")
                  ))
            }
            else
            {
                <div class="grid">
                    <table cellspacing="0">
                        <thead>
                            <tr>
                                <th>StudentID</th>
                                <th>StudentName</th>
                                <th>DateTime</th>
                                <th>ConfirmationStatus</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td colspan="4" align="center">No scheduled appointments</td>
                            </tr>
                        </tbody>
                    </table>
                    <br /><br /><br /><br />
                </div>
            }
        </div>
        }
